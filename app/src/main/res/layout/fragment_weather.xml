                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:text="Actuellement"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:columnCount="2">

                    <TextView
                        android:id="@+id/actuellement_couverture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="10"
                        android:layout_marginBottom="3dp"
                        android:text="Couverture nuageuse"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/actuellement_couverture_valeur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        android:textAlignment="textEnd"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/actuellement_kp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="10"
                        android:layout_marginBottom="3dp"
                        android:text="KP-index"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/actuellement_kp_valeur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        android:textAlignment="textEnd"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/actuellement_chance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnWeight="10"
                        android:layout_marginBottom="3dp"
                        android:text="Chance de voir"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/actuellement_chance_valeur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        android:textAlignment="textEnd"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="0dp" />

                </GridLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart"
                    style="@style/WhiteText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:layout_editor_absoluteY="511dp">

                </com.github.mikephil.charting.charts.BarChart>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart2"
                    style="@style/WhiteText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </com.github.mikephil.charting.charts.BarChart>


            </LinearLayout>

